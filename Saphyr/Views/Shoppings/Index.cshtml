@model IEnumerable<Saphyr.Models.Shopping>

@{
    ViewBag.Title = "Shoppings";
}

<h2>Shoppings</h2>

<p>
    @Html.ActionLink("Novo Shopping", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped table-hover table-fixed">
    <thead class="thead-default">
        <tr>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="col-md-2">
              Gerente Responsável
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.AreaTotal)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.NumeroPiso)
            </th>
            <th class="col-md-3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Gerente.Nome)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.AreaTotal)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.NumeroPiso)
                </td>
                <td class="col-md-3">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Exibir", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>

        }
    </tbody>

</table>
