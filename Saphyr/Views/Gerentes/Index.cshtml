@model IEnumerable<Saphyr.Models.Gerente>

@{
    ViewBag.Title = "Gerentes";
}

<h2>Gerentes</h2>

<p>
    @Html.ActionLink("Novo Gerente", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped table-hover">
    <thead class="thead-default">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Exibir", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>

</table>
