@model IEnumerable<Saphyr.Models.Loja>

@{
    ViewBag.Title = "Lojas";
}

<h2>Lojas</h2>

<p>
    @Html.ActionLink("Nova Loja", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped table-hover">
    <thead class="thead-default">
        <tr>
            <th class="col-md-3">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="col-md-3">
                Shopping
            </th>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Localizacao)
            </th>
            <th class="col-md-3"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shopping.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localizacao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Exibir", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }

</table>
